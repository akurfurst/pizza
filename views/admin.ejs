<body>
<h1>Order Summary</h1>
    <table id="order-table" class="display">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Toppings</th>
                <th>Size</th>
                <th>Method</th>
                <th>Comment</th>
                <th>Timestamp</th>                                
            </tr>
        </thead>
        <tbody>
    <% orders.forEach(order => { %>
        <tr>
            <td><%= order.fname %> <%= order.lname %></td>
            <td><%= order.email %></td>
            <td><%= order.toppings %></td>
            <td><%= order.size %></td>
            <td><%= order.method %></td>
            <td><%= order.comment %></td>
            <td><%= order.timestamp.toLocaleString() %></td>
        </tr>
    <% }) %>
        </tbody>    
    </table>

    <script defer>
        let table = new DataTable('#order-table');
    </script>
</body>
